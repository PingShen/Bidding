<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="#fff" />
            <corners android:radius="@dimen/cornerradius" 
                android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0dp" 
        android:left="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@color/segment_unpress" />
            <corners android:radius="@dimen/cornerradius" 
                android:topLeftRadius="0dp"
                android:bottomLeftRadius="0dp"
                />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
        </shape>
    </item>

</layer-list>