<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
    <include
        layout="@layout/layout_backhead"
        />
   <!--  <include 
        layout="@layout/layout_order_hint"
        /> -->
	<com.huangyezhaobiao.view.TitleMessageBarLayout
	       android:id="@+id/tbl"
	       android:layout_width="fill_parent"
	       android:layout_height="45dp"
       />    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:background="@color/gray"
        >
        <com.huangyezhaobiao.view.CircleImageView
            android:id="@+id/civ_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/launcher"
            android:layout_centerInParent="true"
            />
        <TextView
            android:id="@+id/tv_company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话缴费比较好的暴发户"
            android:layout_below="@id/civ_photo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:textColor="#000000"
            />    
    </RelativeLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:text="抢单资质"
        android:gravity="center_vertical"
        android:background="#e7e7e7"
        android:textColor="@color/black"
     	android:paddingLeft="10dp"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/tv_zizhi_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="多好看的环境维护粗野的郭富城和纪委负也得"
            android:textColor="#000000"
            />
         <View
             android:layout_below="@id/tv_zizhi_name"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
    </RelativeLayout>
</LinearLayout>
