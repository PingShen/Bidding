<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <include
            layout="@layout/layout_backhead"
            />
       <!--  <include
            layout="@layout/layout_order_hint"
            /> -->
            <com.huangyezhaobiao.view.TitleMessageBarLayout
	       android:id="@+id/tbl"
	       android:layout_width="fill_parent"
	       android:layout_height="45dp"
       />
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/no_local"
                android:layout_marginLeft="15dp"
                />
            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_pic"
                android:text="请与客户联系"
                android:layout_marginLeft="5dp"
                />
            <TextView
                android:id="@+id/tv_rest_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余时间"
                android:layout_toRightOf="@id/tv_contact"
                />
        </RelativeLayout>
        
        <TextView
            android:id="@+id/tv_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户电话"
            android:layout_marginLeft="40dp"
            />
		<RelativeLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="40dp"
		    android:layout_marginRight="40dp"
		    >
            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:text="与客户联系"
                android:layout_height="wrap_content"
                />
            
            <TextView
                android:id="@+id/tv_2"
                android:layout_toRightOf="@id/tv_1"
                android:layout_width="wrap_content"
                android:text="我已联系"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                />
		</RelativeLayout>        
        <RelativeLayout
            android:id="@+id/rl_root"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/tv_qiangdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="显示抢单记录"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"
            android:background="@color/gray"
            />
        <include 
            layout="@layout/layout_details_qiangdan"
            />
      	<View
      	    android:layout_width="fill_parent"
      	    android:layout_height="1dp"
      	    android:layout_marginTop="5dp"
      	    android:background="@color/black"
      	    />
      	<View
      	    android:layout_width="fill_parent"
      	    android:layout_height="30dp"
      	    android:background="@color/gray"
      	    />
      	<TextView
      	    android:id="@+id/tv_qiangdan_cost"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:text="抢单费用: 23094324"
      	    />
      	<TextView
      	    android:id="@+id/tv_liushui"
      	    android:layout_width="wrap_content"
      	    android:layout_height="wrap_content"
      	    android:text="交易流水号: 12321312223213"
      	    />
    </LinearLayout>
    

</ScrollView>
