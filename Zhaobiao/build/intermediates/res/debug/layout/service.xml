        android:id="@+id/no_network1"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="horizontal" 
	    android:background="@color/white">
	    
	    <Button
	        android:id="@+id/relocal_button"
	        android:layout_width="20dp"
	        android:layout_height="46dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_gravity="center"
	        android:background="@drawable/orangebuttonselector"
	        android:text="我的抢单"
	        android:textColor="@color/white"
	        android:textSize="18sp"
	        android:layout_weight="1"
	        />

	    <Button
	        android:id="@+id/button_400"
	        android:layout_width="20dp"
	        android:layout_height="46dp"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_gravity="center"
	        android:background="@drawable/writebuttonselector"
	        android:text="可抢订单"
	        android:textSize="18sp"
	        android:textColor="@color/drakblack"
	        android:layout_weight="1"
	        />
	</LinearLayout>

