<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personalregister_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/grap_list_selector"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="14dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="14dp" >

        <TextView
            android:id="@+id/grab_personalregister_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="你好妈妈"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/grab_personalregister_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="你好妈妈"
            android:textColor="#000000"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical"
                android:paddingBottom="36dp"
                android:paddingTop="36dp" >

                <TextView
                    android:id="@+id/grab_personalregister_text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好妈妈"
                    android:textColor="#808080"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="57dp"
                android:orientation="vertical"
                android:paddingBottom="36dp"
                android:paddingTop="36dp" >

                <TextView
                    android:id="@+id/grab_personalregister_text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="你好妈妈"
                    android:textColor="#808080"
                    android:textSize="13sp" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="87dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:background="#dfdfdf" />

        <ImageView
            android:id="@+id/grab_personalregister_knock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:src="@drawable/t_knock" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/root1/Documents/workspaceNewAn/Zhaobiao/res/layout/order_item_personalregister.xml -->