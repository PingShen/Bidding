<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/qiangdan_bg_item"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
         >
    <TextView
        android:id="@+id/tv_last_cost"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:text="抢单费用:"
        />
      <TextView
        android:id="@+id/tv_last_cost_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tv_last_cost"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
         android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        
        />
	</RelativeLayout>
	<View
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#e4e4e4"
	    />
	<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
         >
    <TextView
        android:id="@+id/tv_last_number"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:textColor="@color/light_text_color"
        android:layout_marginLeft="10dp"
        android:text="订单编号:"
        />
      <TextView
        android:id="@+id/tv_last_number_content"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/tv_last_number"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
         android:textColor="@color/light_text_color"
        android:layout_marginLeft="10dp"
        />
	</RelativeLayout>
</LinearLayout>
