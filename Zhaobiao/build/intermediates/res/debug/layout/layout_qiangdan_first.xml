<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- 最头部，已结束时是是要隐藏的 -->

    <RelativeLayout
        android:id="@+id/rl_done_not_gone"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/qiangdan_bg_item"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_done_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="已结束:"
            android:textColor="@color/black" />
        
        
    </RelativeLayout>
    <!-- 客户电话+剩余时间 -->

    <LinearLayout
        android:id="@+id/rl_tel_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-3dp"
        android:background="@drawable/qiangdan_bg_item"
        android:orientation="vertical" >
		<RelativeLayout 
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    >
        <TextView
            android:id="@+id/tv_tel_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="剩余时间:"
            android:textColor="@color/light_text_color" />
        
         <TextView
            android:id="@+id/tv_tel_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
           
            android:layout_toRightOf="@id/tv_tel_time_content"
            android:textColor="@color/gray" />
		</RelativeLayout>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tv_tel_phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户电话:"
                android:layout_marginTop="3dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_tel_phone_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/tv_tel_phone_title"
              
                android:textColor="@color/red" />

            <ImageView
                android:id="@+id/iv_tel"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="22dp"
                android:layout_toRightOf="@id/tv_tel_phone_content"
                android:src="@drawable/qd_tel" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/root1/Documents/workspaceNewAn/Zhaobiao/res/layout/layout_qiangdan_first.xml -->