<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/qiangdan_bg_item"
    android:layout_marginTop="10dp"
    android:paddingBottom="15dp"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="订单详情"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#e4e4e4"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房屋类型:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_type"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>

     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房屋面积:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_size_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_size"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修预算:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_budget_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_budget"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_zx_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修方式:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_zx_type_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_zx_type"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_lf_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="量房时间"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_lf_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_lf_time"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_zx_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="装修时间:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_zx_time_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_zx_time"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
          
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在区域:"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_location_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_location"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="18dp"
        >
        <TextView
            android:id="@+id/tv_needs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="特殊需求"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_needs_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_needs"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            />
    </RelativeLayout>
     <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
       
        >
        <TextView
            android:id="@+id/tv_ch_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户电话:"
            android:layout_marginTop="3dp"
            android:textColor="@color/light_text_color"
            />
        <TextView
            android:id="@+id/tv_ch_tel_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_ch_tel"
            android:layout_marginLeft="10dp"
            android:textColor="@color/red"
            android:layout_marginTop="3dp"
            />
        <ImageView
            android:id="@+id/iv_tels"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/qd_tel"
            android:layout_toRightOf="@id/tv_ch_tel_content"
            android:layout_marginLeft="22dp"
            />
    </RelativeLayout>
</LinearLayout>
