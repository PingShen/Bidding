<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_fragment_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f9fa"
    android:orientation="vertical" >

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        xmlns:ptr="http://schemas.android.com/apk/res-auto"  
        android:id="@+id/lv_all_fragment"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:listSelector="#00000000"
        android:persistentDrawingCache="none"
        android:scrollbars="none"
        android:divider="@null"
        android:layout_marginLeft="10dp"
        ptr:ptrAnimationStyle="flip" 
        android:layout_marginRight="10dp"
         ptr:ptrHeaderSubTextColor="@color/red"
          ptr:ptrHeaderTextColor="@color/black"
        android:scrollingCache="false" />

    <include
        layout="@layout/activity_no_internet"
        android:visibility="gone"
        />
</RelativeLayout><!-- From: file:/Users/root1/Documents/workspaceNewAn/Zhaobiao/res/layout/layout_all_fragment.xml -->